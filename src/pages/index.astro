---
import MainLayout from "~/layouts/MainLayout.astro";

import { Separator } from "~/components/ui";

import About from "~/components/About.tsx";
import Projects from "~/components/Projects.tsx";
import Socials from "~/components/Socials.tsx";
import DevelopedBy from "~/components/DevelopedBy.tsx";
import Menu from "~/components/Menu.tsx";
import Bar from "~/components/Bar.tsx";
import Stacks from "~/components/Stacks.tsx";
---

<MainLayout>
  <main class="container p-3 mx-auto max-w-screen-sm min-h-dvh">
    <Bar client:idle />

    <About client:idle />

    <Separator className="my-8" />

    <Menu title="Projects" client:idle>
      <Projects client:idle />
    </Menu>

    <!--
    <div class="h-10"></div>

    <div class="h-10"></div>
    -->
    
    <Menu title="Stacks" client:idle>
      <Stacks client:idle />
    </Menu>

    <Menu title="Socials" client:idle>
      <Socials client:idle />
    </Menu>

    <Separator className="my-8" />

    <DevelopedBy />
  </main>
</MainLayout>
